<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:background="@color/white"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="375dp"
            android:layout_height="255dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="38dp"
            android:adjustViewBounds="true"
            android:contentDescription="poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/banner" />


        <TextView
            android:id="@+id/textDashboard"
            android:layout_width="368dp"
            android:layout_height="49dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/balsamiq_sans"
            android:text="Ambulance Booking"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="18dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:srcCompat="@drawable/amb_img"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you need"
            android:fontFamily="@font/balsamiq_sans"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="202dp"
            android:layout_height="152dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:src="@drawable/cardiologist" />

        <ImageView
            android:layout_width="202dp"
            android:layout_height="152dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/pulmonologist" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="202dp"
                android:layout_height="152dp"
                android:layout_marginTop="22dp"
                android:adjustViewBounds="true"
                android:src="@drawable/neurologist" />
            <ImageView
                android:layout_width="202dp"
                android:layout_height="152dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/gynecologist" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="202dp"
                android:layout_height="152dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/psychiatrist"/>
            <ImageView
                android:layout_width="202dp"
                android:layout_height="152dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/orthopedic"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>